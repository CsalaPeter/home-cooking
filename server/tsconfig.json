{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"module": "esnext",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
